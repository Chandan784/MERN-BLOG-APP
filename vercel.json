{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },
        {
            "src": "build/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/v1/blogs",
            "dest": "index.js"
        },

        {
            "src": "/api/v1/blogs/(.*)",
            "dest": "index.js"
        },
        {
            "src": "build/(.*)",
            "dest": "/"
        },
        {
            "src": "/",
            "dest": "build/index.html"
        },
        
        {
            "src": "build/",
            "use": "@vercel/static"
        }
        , {
            "src": "/(.+)",
            "dest": "build/$1"
        }
    ]
}